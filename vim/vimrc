  let g:netrw_liststyle = 3
  let g:netrw_banner = 0
  let g:netrw_fastbrowse = 2 "heavier caching <c-l> to refresh
  let g:netrw_list_hide = '\.gitkeep,\.DS_Store,\.bundle,\.*\.vscode,\.*\.file_extension'
